<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/success" />

    <TextView
        android:id="@+id/tv_Message1"
        style="@style/MyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPicture"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/tv_Message1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_Message2"
        style="@style/MyTextStyle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Message1"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/tv_Message2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="@string/btnSet"
            android:textSize="@dimen/txt_size_medium"
            android:textColor="@color/button_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_Message3"
            style="@style/MyTextStyle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/tv_Message3"
            android:textSize="@dimen/txt_size_medium" />
    </LinearLayout>


</RelativeLayout>